<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

 <data>
  <variable
      name="wishlistViewModel"
      type="com.example.unacademy.viewmodel.viewmodelStudentside.StudentProfileViewModel" />
 </data>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     tools:context=".Ui.StudentsSide.ProfileStudentSide">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

   <com.google.android.material.imageview.ShapeableImageView
       android:id="@+id/shapeableImageView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="120dp"
       android:layout_marginTop="36dp"
       android:layout_marginEnd="120dp"
       android:background="@drawable/profile_teachers_side"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:shapeAppearanceOverlay="@style/Circular"
       app:strokeWidth="5dp"/>

   <TextView
       android:id="@+id/StudentNameProfile"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="140dp"
       android:layout_marginTop="8dp"
       android:fontFamily="@font/rosario_bold"
       android:text="Student Name"
       android:textColor="#000000"
       android:textSize="20sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

   <TextView
       android:id="@+id/textView96"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
       android:layout_marginTop="32dp"
       android:fontFamily="@font/rosario_bold"
       android:text="Wishlist"
       android:textColor="#000000"
       android:textSize="24sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/ViewProfileStudent" />

   <Button
       android:id="@+id/ViewProfileStudent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="130dp"
       android:layout_marginTop="16dp"
       android:text="View Profile"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/StudentNameProfile" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/RecyclerAdapterWishlistStudentSide"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView96" />

   <TextView
       android:id="@+id/EmptyWishlistStudentSide"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
       android:layout_marginTop="60dp"
       android:layout_marginEnd="16dp"
       android:textColor="#000000"
       android:elevation="6dp"
       android:fontFamily="@font/rhodium_libre"
       android:textSize="24sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView96" />

   <TextView
       android:id="@+id/textView99"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
       android:layout_marginTop="40dp"
       android:fontFamily="@font/rosario_bold"
       android:text="Attempted Quizes"
       android:textColor="#000000"
       android:textSize="24sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/shimmerFrameLayoutLatestSeriesProfilePageStudentSide" />


   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/RecyclerAdapterAttemptedQuizes"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView99" />

   <com.facebook.shimmer.ShimmerFrameLayout
       android:id="@+id/shimmerFrameLayoutLatestSeriesProfilePageStudentSide"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"

       android:orientation="horizontal"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView96">

    <LinearLayout
        android:id="@+id/linearLayoutlatestSeries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

     <include

         layout="@layout/shimmer_effect_latest_series" />

     <include

         layout="@layout/shimmer_effect_latest_series" />
     />
    </LinearLayout>
   </com.facebook.shimmer.ShimmerFrameLayout>

   <TextView
       android:id="@+id/EmptyAttemptedQuiz"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
       android:layout_marginTop="24dp"
       android:layout_marginEnd="16dp"
       android:text="You Haven't attempted any quiz till now"
       android:textSize="24sp"
       android:visibility="invisible"
       android:textColor="@color/black"
       android:fontFamily="@font/rhodium_libre"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView99" />
  </androidx.constraintlayout.widget.ConstraintLayout>

 </FrameLayout>
</androidx.core.widget.NestedScrollView>
</layout>