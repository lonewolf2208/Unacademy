<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="uploadLectureViewModel"
            type="com.example.unacademy.viewModel.UploadLectureViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.TeachersSide.upload_lectures">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Ui.TeachersSide.upload_lectures">


            <TextView
                android:id="@+id/textView21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/rosario_bold"
                android:text="Upload Lecture Video"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/reem_kufi"
                android:text="Upload the lecture video"
                android:textColor="#003356"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <Button
                android:id="@+id/UploadLectureButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/reem_kufi"
                android:text="Upload"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/reem_kufi"
                android:text="Lecture Title"
                android:textColor="#003356"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/UploadLectureButton" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextTextPersonName9Container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:helperText="@{uploadLectureViewModel.helperTextTitle}"
                app:helperTextTextColor="@android:color/holo_red_dark"
                app:layout_constraintTop_toBottomOf="@+id/textView45"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTextPersonName9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:ems="10"
                android:text="@={uploadLectureViewModel.lectureTitle}"
                android:hint="Enter the title of lecture"
                android:inputType="textPersonName"
                android:paddingStart="11dp"

                />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/createLecture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="100dp"
                android:text="Create"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lectureDescriptionContainer" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lectureDescriptionContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                app:helperTextTextColor="@android:color/holo_red_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:helperText="@{uploadLectureViewModel.helperTextDescription}"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView47">
            <EditText
                android:id="@+id/lectureDescription"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:ems="10"
                android:paddingStart="11dp"
                android:hint="Enter your description"
                android:inputType="textPersonName"
                android:text="@={uploadLectureViewModel.lectureDescription}"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:fontFamily="@font/reem_kufi"
                android:textColor="#003356"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Lecture Description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName9Container" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>